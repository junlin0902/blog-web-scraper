{
  "name": "@redwoodjs/testing",
  "version": "8.4.0",
  "description": "Tools, wrappers and configuration for testing a Redwood project.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redwoodjs/redwood.git",
    "directory": "packages/testing"
  },
  "license": "MIT",
  "type": "commonjs",
  "files": [
    "config",
    "web",
    "api",
    "cache",
    "dist"
  ],
  "scripts": {
    "build": "tsx ./build.mts && yarn build:types",
    "build:pack": "yarn pack -o redwoodjs-testing.tgz",
    "build:types": "tsc --build --verbose ./tsconfig.build.json",
    "build:watch": "nodemon --watch src --ext 'js,jsx,ts,tsx' --ignore dist --exec 'yarn build'",
    "check:attw": "yarn rw-fwtools-attw",
    "check:package": "concurrently npm:check:attw yarn:publint",
    "prepublishOnly": "NODE_ENV=production yarn build",
    "test": "vitest run",
    "test:watch": "vitest watch"
  },
  "dependencies": {
    "@redwoodjs/auth": "8.4.0",
    "@redwoodjs/babel-config": "8.4.0",
    "@redwoodjs/context": "8.4.0",
    "@redwoodjs/graphql-server": "8.4.0",
    "@redwoodjs/project-config": "8.4.0",
    "@redwoodjs/router": "8.4.0",
    "@redwoodjs/web": "8.4.0",
    "@testing-library/jest-dom": "6.5.0",
    "@testing-library/react": "14.3.1",
    "@testing-library/user-event": "14.5.2",
    "@types/aws-lambda": "8.10.145",
    "@types/babel-core": "6.25.10",
    "@types/jest": "29.5.13",
    "@types/node": "20.16.11",
    "babel-jest": "^29.7.0",
    "fast-glob": "3.3.2",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jest-watch-typeahead": "2.2.2",
    "msw": "1.3.4",
    "ts-toolbelt": "9.6.0",
    "whatwg-fetch": "3.6.20"
  },
  "devDependencies": {
    "@redwoodjs/framework-tools": "8.4.0",
    "concurrently": "8.2.2",
    "jsdom": "24.1.3",
    "publint": "0.2.11",
    "tsx": "4.19.1",
    "typescript": "5.6.2",
    "vitest": "2.0.5"
  },
  "gitHead": "c2128f0c6c1ee82fe54aa0dd8bac269167b84485"
}
